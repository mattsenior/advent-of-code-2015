(enable-console-print!)

(def NORTH "^")
(def SOUTH "v")
(def EAST ">")
(def WEST "<")

(defn split
  [x]
  (re-seq #"[\^v<>]" x))

(defn dir->vector
  [x]
  (condp = x
    NORTH [0 1]
    SOUTH [0 -1]
    EAST [1 0]
    WEST [-1 0]))

(defn apply-movement
  [current-pos m]
  (vec (map + current-pos (dir->vector m))))

(defn instructions->pos-counts
  [in]
  (->> in
       (reduce
        (fn [acc [santa-idx v]]
          (let [santa (get acc santa-idx {:current-pos [0 0] :trace {[0 0] 1}})
                next-pos (apply-movement (:current-pos santa) v)
                santa (update-in santa [:trace next-pos] inc)
                santa (assoc santa :current-pos next-pos)]
            (assoc acc santa-idx santa)))
        {})
       vals
       (map :trace)
       (apply merge-with +)
       count
       ))

(defn instructions->house-count
  ([in]
   (instructions->house-count 1 in))
  ([santa-count in]
   (->> in
        split
        (map vector (cycle (range santa-count)))
        instructions->pos-counts
        #_count
        )))

